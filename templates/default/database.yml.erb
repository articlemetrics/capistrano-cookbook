defaults: &defaults
  adapter:   mysql2
  username:  <%= @params[:username] %>
  password:  <%= @params[:password] %>
  host:      <%= @params[:host] %>
  pool: 10

production:
  <<: *defaults
  database:  <%= @application_name %>_production

development:
  <<: *defaults
  database:  <%= @application_name %>_development

test:
  <<: *defaults
  database:  <%= @application_name %>_test


